<%= render 'search' %>
<div class ="container">
  <% if @response %>
    <% @response.each do |pet| %>
      <%next if !pet.photos.any? %>
          <div class="description-container">
            <h2><%= pet.name %></h2>
            <p><%= pet.description %></p>
            <p> <%= link_to image_tag(pet.photos.first.medium, class: 'img-responsive') %> </p>
          </div>
        <% end %>
  <% else %>
    <%="no results found" %>
  <% end %>
</div>
